@model IEnumerable<zoo.Models.Kind>

@{
    ViewBag.Title = "物種管理";
}




<div class="container">
    <div class="row">
        <div class="panel panel-primary filterable">
            <div class="panel-heading">
                <h3>物種列表</h3>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr class="filters">
                        <th><input type="text" class="form-control" placeholder="物種編號" disabled style="width:90%"></th>
                        <th><input type="text" class="form-control" placeholder="物種名稱" disabled style="width:90%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="width:10%;">@Html.DisplayFor(modelItem => item.KindID)</td>
                            <td>@Html.DisplayFor(modelItem => item.KindName)</td>
                            <td>

                                <a class="btn icon-btn btn-primary" href="@Url.Action("Edit", new { id = item.KindID })">
                                    <span class="glyphicon btn-glyphicon glyphicon-edit img-circle text-primary"></span>修改
                                </a>
                            </td>
                        </tr>
                    }
                    </tr>
                </tbody>
            </table>
        </div>

        <p>
            @Html.ActionLink("新增物種", "Create")
        </p>

    </div>
</div>


